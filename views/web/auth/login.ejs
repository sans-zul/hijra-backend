<%- contentFor("head") %>
<div class="text-center">
    <h3 class="">Sign in</h3>
    <!-- <p>Don't have an account yet? <a href="<%= base_url %>/auth/register">Sign up here</a></p> -->
</div>

<%- contentFor("form") %>
<% if(auth_error) { %>
    <% console.log(auth_error); %>
    <div class="alert alert-danger mt-2">
        <%= auth_error %>
    </div>
<% } %>

<form class="row g-3" method="POST" action="<%= base_url %><%= action %>">
    <div class="col-12">
        <label for="username" class="form-label">Username or Email</label>
        <input type="text" class="form-control" id="username" name="username" value="<%= username ? username : "" %>" placeholder="Username or Email" autofocus>
    </div>
    <div class="col-12">
        <label for="password" class="form-label">Enter Password</label>
        <div class="input-group" id="show_hide_password">
            <input type="password" class="form-control border-end-0" id="password" name="password" placeholder="Enter Password">
            <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
            <label class="form-check-label" for="flexSwitchCheckChecked">Remember Me</label>
        </div>
    </div>
    <!-- <div class="col-md-6 text-end">
        <a href="authentication-forgot-password.html">Forgot Password ?</a>
    </div> -->
    <div class="col-12">
        <div class="d-grid">
            <button type="submit" class="btn btn-primary"><i class="bx bxs-lock-open"></i>Sign in</button>
        </div>
    </div>
</form>